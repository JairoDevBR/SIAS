<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
      <% if request.fullpath == new_emergency_path %>
        <div class="navbar-brand">
          <%= image_tag "SIAS-VERMELHO.png" %>
        </div>
      <% else %>
        <%= link_to root_path, class: "navbar-brand" do %>
          <%= image_tag "SIAS-VERMELHO.png" %>
        <% end %>
      <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <i class="fa-solid fa-bars"></i>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <% unless (controller_path == "schedules") || (request.fullpath == root_path) || (request.fullpath == new_emergency_path)%>
              <%= link_to "Home", "#", class: "nav-link" %>
            <% end %>
          </li>
          <li class="nav-item dropdown">
          <a href="#" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <% if current_user.admin  %>
              <p>Olá ADMIN</p>
            <% elsif current_user.central %>
              <p>Olá CENTRAL</p>
            <% else %>
              <p>Olá SOCORRISTAS</p>
            <% end %>
          </a>
            <div class="dropdown-menu dropdown-menu-end background-color-azul drop-jairo" aria-labelledby="navbarDropdown">
              <% unless (request.fullpath == new_emergency_path)%>
              <%= link_to "Voltar ao Login", new_schedule_path, class: "dropdown-item" %>
              <% end %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <a href="/users/sign_in" class="botão-login-navbar">Entrar</a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
